# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# DS-Core API Configuration
VITE_DSCORE_CLIENT_ID=your_dscore_client_id_here
VITE_DSCORE_CLIENT_SECRET=your_dscore_client_secret_here

# Environment: Use 'sandbox' for testing or 'production' for live
VITE_DSCORE_ENVIRONMENT=sandbox

# Sandbox URLs (for testing)
VITE_DSCORE_SANDBOX_BASE_HOST=https://api.r2.dscore.com
VITE_DSCORE_SANDBOX_AUTH_HOST=https://r2.dscore.com

# Production URLs - Choose based on your region:
# US: https://api.r1.dscore.com and https://r1.dscore.com
# EU: https://api.r2.dscore.com and https://r2.dscore.com
# CA: https://api.r3.dscore.com and https://r3.dscore.com
# AU: https://api.r4.dscore.com and https://r4.dscore.com
# JP: https://api.r5.dscore.com and https://r5.dscore.com
# BR: https://api.r8.dscore.com and https://r8.dscore.com
# KR: https://api.r9.dscore.com and https://r9.dscore.com
# IN: https://api.r10.dscore.com and https://r10.dscore.com
VITE_DSCORE_PRODUCTION_BASE_HOST=https://api.r2.dscore.com
VITE_DSCORE_PRODUCTION_AUTH_HOST=https://r2.dscore.com

# Global Host (same for all regions and environments)
VITE_DSCORE_GLOBAL_HOST=https://api.dscore.com

# Callback URL (update with your production domain when deploying)
VITE_DSCORE_CALLBACK_URL=http://localhost:5173/settings

# 3Shape Communicate API Configuration
VITE_3SHAPE_CLIENT_ID=your_3shape_client_id_here
VITE_3SHAPE_CLIENT_SECRET=your_3shape_client_secret_here
VITE_3SHAPE_API_URL=https://api.3shapecommunicate.com
VITE_3SHAPE_AUTH_URL=https://auth.3shapecommunicate.com
VITE_3SHAPE_CALLBACK_URL=https://yourdomain.com/settings/3shape-callback
